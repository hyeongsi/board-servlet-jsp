<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="MemberMapper">

	<select id="useridCheck" parameterType="string"
		resultType="MemberDTO">
		select *
		from member
		where userid = #{userid}
	</select>
	
	<select id="nameCheck" parameterType="string"
		resultType="MemberDTO">
		select *
		from member
		where name = #{name}
	</select>
	
	<insert id="registerMember" parameterType="MemberDTO">
		insert into member (id, userid, pw, name)
		values (member_seq.nextval, #{userid}, #{pw}, #{name})
	</insert>

	<select id="loginMember" parameterType="hashmap" resultType="MemberDTO">
		select id, userid, pw, name
		from member
		where userid = #{userid} and pw = #{pw}
	</select>
	
	<delete id="deleteMember" parameterType="string">
		delete from member
		where userid = #{userid}
	</delete>
	
	<update id="editMember" parameterType="MemberDTO">
		update member 
		set pw = #{pw}
		where userid = #{userid}
	</update>

</mapper>